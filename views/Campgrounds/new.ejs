<%- include("../partials/header") %>

<div class="container">
    <div class="row form">
        <h1 style="text-align: center;">Create new Campground</h1>
        <div class="row">
            <div class="col-sm-8 col-md-6 col-xl-4 mx-auto">
                <form action="/campgrounds" method="POST" autocomplete="off">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Name" name="name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image URL" name="image" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Longitude" name="longitude" step="any" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Latitude" name="latitude" step="any" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Description" name="description" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Price" name="price" min="1" step="0.1" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/" class="goBack">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>