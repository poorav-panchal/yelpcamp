<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create new Campground</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds" method="POST" autocomplete="off">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="1" step="0.1">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>