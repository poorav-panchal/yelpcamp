<%- include("../partials/header") %>

<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1 class="welcome">Welcome to YelpCamp!</h1>
        <p>Here are our hand-picked camp sites from all across the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Create new Campground</a>
        </p>
    </div>
</header>

    <div class="row" style="display: flex; flex-wrap: wrap;">

        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>" alt="<%= camp.name %>" width="100%" height="300px">
                    <div class="caption" style="text-align: center;">
                        <h3><%= camp.name %></h3>
                    </div>
                    <p style="text-align: center;">
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<%- include("../partials/footer") %>