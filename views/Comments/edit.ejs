<%- include("../partials/header") %>

<div class="container">
    <div class="row form">
        <h1 style="text-align: center;">Edit your comment</h1>
        <div class="row">
            <div class="col-sm-8 col-md-6 col-xl-4 mx-auto">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST" autocomplete="off">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/" class="goBack">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>